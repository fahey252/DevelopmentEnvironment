{
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
                0,
                "tab"
        ],
        "quotes": [
                2,
                "single"
        ],
        "linebreak-style": [
                0,
                "unix"
        ],
        "semi": [
                2,
                "always"
        ],
        "no-console": 0,
        "no-mixed-spaces-and-tabs": 0,
        "no-warning-comments":  2
    },
    "env": {
        "browser": true,
        "node": true
    }
}
